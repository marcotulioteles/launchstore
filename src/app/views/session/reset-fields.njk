<div class="item">
  <div>E-mail</div>
  <div class="input">
    <input 
      type="email" 
      name="email" 
      placeholder="Digite o seu email" 
      value="{{ user.email }}"
      onblur="Validate.apply(this,'isEmail')"
    >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class="input">
    <input 
      type="password" 
      name="password"
      {% if not user.id %}
        placeholder="Digite uma nova senha"
      {% endif %} 
    >
  </div>
</div>

